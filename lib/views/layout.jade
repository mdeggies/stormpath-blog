block vars
  - var title

doctype html
html(lang='en')
  head
    block title
      title=title ? (siteName + ' - ' + title) : siteName
    block css
      link(href='https://maxcdn.bootstrapcdn.com/bootswatch/3.3.6/journal/bootstrap.min.css', rel='stylesheet')
      link(href='https://cdn.jsdelivr.net/bootstrap.tagsinput/0.8.0/bootstrap-tagsinput.css', rel='stylesheet')
      link(href='https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css', rel='stylesheet')
      link(href='/static/css/style.css', rel="stylesheet")
    block js
      script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js')
      script(src='https://cdnjs.cloudflare.com/ajax/libs/randomcolor/0.4.4/randomColor.min.js')
      script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js')
      script(src='https://cdn.jsdelivr.net/bootstrap.tagsinput/0.8.0/bootstrap-tagsinput.min.js')
      script(src='/static/includes/jquery.dotdotdot.min.js')
      script(src='/static/js/index.js')
      link(href='/static/images/logo.png', rel='icon')
  body
    include navbar
    div.container
      block content
